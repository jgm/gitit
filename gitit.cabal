                     HTTP >= 4000.0,
                     HStringTemplate >= 0.6 && < 0.9,
                     old-locale,
                     time,
                     recaptcha >= 0.1,
                     filestore >= 0.6.5 && < 0.7,
                     zlib >= 0.5 && < 0.7,
